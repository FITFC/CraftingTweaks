{
  "schemaVersion": 1,
  "id": "craftingtweaks",
  "version": "${version}",

  "name": "Crafting Tweaks",
  "description": "Allows you to rotate, balance or clear the crafting matrix by the press of a button, in any (supported) crafting window.",
  "authors": [
    "BlayTheNinth"
  ],
  "contact": {
    "homepage": "https://blay09.net/",
    "sources": "https://github.com/ModdingForBlockheads/CraftingTweaks",
    "issues": "https://github.com/ModdingForBlockheads/CraftingTweaks/issues"
  },

  "license": "All Rights Reserved",
  "icon": "craftingtweaks-icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.blay09.mods.craftingtweaks.FabricCraftingTweaks"
    ],
    "client": [
      "net.blay09.mods.craftingtweaks.client.FabricCraftingTweaksClient"
    ],
    "modmenu": [
      "net.blay09.mods.craftingtweaks.compat.ModMenuIntegration"
    ],
    "rei_plugins": [
      "net.blay09.mods.craftingtweaks.compat.RoughlyEnoughItemsIntegration"
    ]
  },
  "mixins": [
    "craftingtweaks.mixins.json"
  ],
  "depends": {
    "cloth-config2": ">=5.0.34",
    "balm-fabric": ">=1.1.0",
    "fabricloader": ">=0.11.3",
    "fabric": "*",
    "minecraft": "1.17.x",
    "java": ">=16"
  },
  "suggests": {
    "modmenu": "*"
  },
  "custom": {
    "modmenu": {
      "links": {
        "modmenu.discord": "https://discord.gg/scGAfXC"
      }
    }
  }
}
